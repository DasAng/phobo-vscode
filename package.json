{
	"name": "phobo-vscode",
	"displayName": "phobo-vscode",
	"description": "Phobo vscode extension",
	"version": "0.3.3",
	"engines": {
		"vscode": "^1.54.0"
	},
	"publisher": "dasang",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"repository": "https://github.com/DasAng/phobo-vscode",
	"icon": "logo.png",
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "feature",
				"aliases": [
					"feature",
					"gherkin",
					"Gherkin",
					"cucumber"
				],
				"extensions": [
					".feature"
				]
			}
		],
		"breakpoints": [
			{
				"language": "feature"
			}
		],
		"debuggers": [
			{
				"type": "phobo",
				"label": "Phobo Debug",
				"runtime": "node",
				"program": "./dist/phoboDebugAdapter.js",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": false
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "phobo",
						"request": "launch",
						"name": "Phobo debug",
						"program": "${workspaceFolder}/",
						"stopOnEntry": false
					}
				],
				"configurationSnippets": [
					{
						"label": "Phobo Debug: Launch",
						"description": "A new configuration for launching a phobo debug program",
						"body": {
							"type": "phobo",
							"request": "launch",
							"name": "${2:Launch Program}",
							"program": "^\"\\${workspaceFolder}/${1:Program}\""
						}
					}
				]
			}
		],
		"commands": [
			{
				"command": "phobo-vscode.viewTranslator",
				"title": "View translated feature",
				"icon": {
					"dark": "./images/phobo.png",
					"light": "./images/phobo_dark.png"
				}
			},
			{
				"command": "phobo-vscode.run",
				"title": "Run Phobo",
				"category": "phobo"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceExtname == .feature",
					"command": "phobo-vscode.viewTranslator",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Phobo",
			"properties": {
				"phobo.executablePath": {
					"type": "string",
					"description": "Specify full path of the Phobo executable"
				},
				"phobo.enableValidation": {
					"type": "boolean",
					"default": true,
					"description": "Enable validation of feature files"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile_window",
		"compile_window": "webpack --mode production && xcopy images dist\\images\\ /Y && xcopy actiondocs dist\\actiondocs\\ /Y",
		"compile_debug_window": "tsc -p ./ && xcopy images out\\images\\ /Y && xcopy actiondocs out\\actiondocs\\ /Y",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"webpack-prod": "webpack --mode production"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/lodash": "^4.14.168",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@types/ws": "^7.4.1",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.1.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.28.0",
		"webpack-cli": "^4.6.0"
	},
	"dependencies": {
		"await-notify": "^1.0.1",
		"bunbo": "^1.1.21",
		"lodash": "^4.17.21",
		"vscode-debugadapter": "^1.46.0",
		"ws": "^7.4.4"
	}
}
